<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="purchase_order_farm">
            <field name="name">purchase.order.farm</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Farm">
                        <group>
                            <field name="farm_id" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                            <field name="folio"/>
                            <field name="farm_owner"/>
                            <field name="city"/>
                            <field name="coords"/>
                            <field name="area"/>
                        </group>
                        <group>
                            <field name="hired_area" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                            <field name="expected_performance"/>
                            <field name="regime" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                            <field name="validated_production" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                            <field name="validated_year" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                            <field name="annex_folio" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                            <field name="client" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                            <field name="ownership_type" attrs="{'required':[('contract_type', 'in', ['axc'])]}"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
